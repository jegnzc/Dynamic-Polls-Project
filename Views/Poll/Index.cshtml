@model DevelTest.Models.PollViewModel

@{
    ViewBag.Title = "Nueva Encuesta";
}
<h1>
    @ViewBag.Title
</h1>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Index", "Poll", FormMethod.Post, new { id = "pollCreateForm", @class = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                @Html.LabelFor(x => x.Name, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(x => x.Description, new { @class = "form-label" })
                <input type="password" class="form-control" id="exampleInputPassword1">
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</div>